<script>
function errorCheck(){
  return true;
}

function goWrite()
{
    if(errorCheck() == false)
      return;
    var params = $("#myform").serialize();
    $.ajax({
        url: "/member/register",
        data: params,
        method: "POST",
        dataType: "json"
    })
    .done((result) => {
        if(result.result == "success"){
            alert("회원가입 성공");
            location.href = "/member/login"; // 로그인 페이지로 이동
        }
        else{
            alert("회원가입 실패");
            location.href = "/";
        }
    })
    .fail((a, b) => {
        alert(b);
    })
}

function goModify()
{
	var frm = document.form;
	frm.action="/board/modify_save";
	frm.submit();
}

function goCancel()
{
  var frm = document.form;
	frm.action="/board/list";
	frm.submit();
}

$(() => {
  $("#btnIdCheck").click(() => {
    if($("#userid").val().trim() == ""){
      alert("아이디를 입력하세요.");
      $("#userid").focus();
      return false;
    }
  

    $.ajax({
      url: "/member/check",
      method: "POST",
      data: {"userid":$("#userid").val()},
      dataType: "json"
    })
    .done((result) => {
      if(result.result == "success"){
        alert("사용가능한 아이디입니다.");
        $("#idcheck").val("Y");
        $("#userid").prop("readonly", true);
      }
      else{
        alert("이미 사용중인 아이디입니다.");
      }
    })
    .fail((a, b) => {
      console.log(b);
    })
  });
});
</script>